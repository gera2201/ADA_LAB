#include <stdio.h>
int search(int arr[], int n, int ele)
{
    for (int i=0;i<n;i++)
    {
        if(arr[i]==ele)
        {
        printf("Element found at position %d\n",(i+1));
        return 1;
        }
    }
    return -1;
}
  
 
int main()
{
    int n,ele,r;
    printf("Enter Array Size\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter array elements\n");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    
    printf("Enter Search Element\n");
    scanf("%d",&ele);
    r = search(arr, n, ele);
    if(r==-1)
    printf("Element not found");
    return 0;
}
