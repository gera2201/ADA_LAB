#include<stdio.h>
 
int linearser(int arr[], int l, int r, int x)
{
     if (r < l)
        return -1;
     if (arr[l] == x)
        return l;
     if (arr[r] == x)
        return r;
     return linearser(arr, l+1, r-1, x);
}
 
int main()
{
    int i,n,x;
    printf("Enter size of Array\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the array elements\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Enter the Search Element\n");
    scanf("%d",&x);
    int pos = linearser(arr, 0, n-1, x);
    if (pos != -1)
       printf("Element %d is present at position %d", x, pos+1);
    else
        printf("Element %d is not present", x);
    return 0;
}
